<?xml version="1.0" encoding="UTF-8"?>
<spring:beans 
	xmlns:spring="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	    http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    <spring:bean id="fileUploadResource" class="org.springframework.core.io.FileSystemResource" >
        <spring:constructor-arg type="java.lang.String" value="/tmp"/>
    </spring:bean>
   <!-- one of the properties available; the maximum file size in bytes -->
    <!-- Configure the multipart resolver-->
    <spring:bean id="multipartResolver" class="org.dataone.cn.rest.web.DataoneMultipartResolver">
        <spring:property name="maxUploadSize" value="10000000000"/>
        <spring:property name="maxInMemorySize" value="10000"/>
        <spring:property name="uploadTempDir" ref="fileUploadResource"/>
    </spring:bean>
<!--    <context:property-placeholder location="classpath:/org/dataone/cn/rest/resources/proxyMetacat.properties"/> -->
    <spring:bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <spring:property name="alwaysUseFullPath" value="true"/>
        <spring:property name="urlDecode" value="false"/>
    </spring:bean>
    <spring:bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <spring:property name="alwaysUseFullPath" value="true"/>
        <spring:property name="urlDecode" value="false"/>
        <spring:property name="useDefaultSuffixPattern" value="false" />
    </spring:bean>

    <spring:bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <spring:property name="alwaysUseFullPath" value="true"/>
    <!-- other properties -->
    </spring:bean>

    <context:component-scan base-package="org.dataone.cn.rest.proxy.controller" use-default-filters="false">
        <context:include-filter type="regex" expression=".*CNReplicationController"/>
    </context:component-scan>
</spring:beans>
