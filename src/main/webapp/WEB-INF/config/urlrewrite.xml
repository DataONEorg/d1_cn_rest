<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite SYSTEM "UrlRewrite.dtd" >
<urlrewrite default-match-type="regex" use-query-string="true">
	<rule match-type="regex">
	    <from>^/object/?$</from>
	    <to>/metacat/object/</to>
	</rule>
        <!--
        object,meta,resolve regex path should exclude any queries, or those paths that have a ? directly
        after the /object/
        -->
	<rule match-type="regex">
	    <from>^/object/([^\?]{1}.*)$</from>
	    <to>/metacat/object/$1</to>
	</rule>
	<rule match-type="regex">
	    <from>^/meta/([^\?]{1}.*)$</from>
	    <to>/metacat/meta/$1</to>
	</rule>
	<rule match-type="regex">
	    <from>^/resolve/([^\?]{1}.*)$</from>
	    <to>/metacat/resolve/$1</to>
	</rule>
	<rule match-type="regex">
	    <from>^/object/?\?(.*qt=path.*)$</from>
	    <to>/metacat/object/?$1</to>
	</rule>
	<rule match-type="regex">
	    <from>^/object/?\?(.*qt=solr.*)$</from>
	    <to>/mercury/object/?$1</to>
	</rule>

        <!--
        TODO /metacat/object, /metacat/meta, /metacat/resolve regex path should exclude any queries, or those paths that have a ? directly
        after the /object/
        -->
	<outbound-rule>
	    <from>^/metacat/object/$</from>
	    <to>/object/</to>
	</outbound-rule>
	<outbound-rule>
	    <from>^/metacat/object/(.+)$</from>
	    <to>/object/$1</to>
	</outbound-rule>
	<outbound-rule>
	    <from>^/metacat/meta/(.+)$</from>
	    <to>/meta/$1</to>
	</outbound-rule>
	<outbound-rule>
	    <from>^/metacat/resolve/(.+)$</from>
	    <to>/resolve/$1</to>
	</outbound-rule>
	<outbound-rule>
	    <from>^/mercury/object/(.+)$</from>
	    <to>/object/$1</to>
	</outbound-rule>
<!--	<outbound-rule>
	    <from>^/nodeList\.xml$</from>
	    <to>/node/</to>
	</outbound-rule> -->

</urlrewrite>
