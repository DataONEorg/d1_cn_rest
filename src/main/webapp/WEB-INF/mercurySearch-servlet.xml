<?xml version="1.0" encoding="UTF-8"?>
<spring:beans 
	xmlns:spring="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	    http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

        <context:property-placeholder location="classpath:/org/dataone/cn/rest/resources/proxyMercury.properties"/>
        <context:component-scan base-package="org.dataone.cn.rest.proxy.controller" >
            <context:include-filter type="regex" expression="org.dataone.cn.rest.proxy.controller.ObjectCollectionController"/>
            <context:exclude-filter type="regex" expression="org.dataone.cn.rest.proxy.controller.(?:ObjectController|AbstractProxyController)"/>
          <!--  <context:exclude-filter type="regex" expression="org.dataone.cn.rest.proxy.controller.(?!ObjectCollectionController)"/> -->
        </context:component-scan>
        <context:component-scan base-package="org.dataone.cn.rest.proxy.service.impl.mercury" />
</spring:beans>
