<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>DataONE-CnRestService</display-name>
    <listener>
        <listener-class>
      org.springframework.web.util.WebAppRootListener
        </listener-class>
    </listener>
    <context-param>
        <param-name>instance</param-name>
        <param-value>cn</param-value>
    </context-param>
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>cn.rest.root</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/config/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/config/log4j.properties</param-value>
    </context-param>
    <filter>
        <filter-name>ServiceDisableFilter</filter-name>
        <filter-class>org.dataone.cn.rest.ServiceDisableFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServiceDisableFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PortalCertificateFilter</filter-name>
        <filter-class>org.dataone.cn.rest.PortalCertificateFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PortalCertificateFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- the resolve filter is applied after a systeMetadata is proxied through metacat -->
    <filter>
        <filter-name>ResolveFilterV1</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetFilterLifecycle</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ResolveFilterV1</filter-name>
        <url-pattern>/v1/resolve/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ResolveFilterV2</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetFilterLifecycle</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ResolveFilterV2</filter-name>
        <url-pattern>/v2/resolve/*</url-pattern>
    </filter-mapping>
    
<!--  the d1-servlet covers most cases for DataONE -->
    <servlet>
        <servlet-name>d1</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>d1</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
<!--  the xslt servlet maps to anything under the xslt directory  -->    
    <servlet>
        <servlet-name>xslt</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>xslt</servlet-name>
        <url-pattern>/xslt/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>xslt</servlet-name>
        <url-pattern>/xslt/</url-pattern>
    </servlet-mapping>
    
<!--  all http errors should be mapped through the exceptions servlet  -->        
    <servlet>
        <servlet-name>exception</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>exception</servlet-name>
        <url-pattern>/exception/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>400</error-code>
        <location>/exception/400</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/exception/401</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/exception/403</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/exception/404</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/exception/405</location>
    </error-page>
    <error-page>
        <error-code>406</error-code>
        <location>/exception/406</location>
    </error-page>
    <error-page>
        <error-code>407</error-code>
        <location>/exception/407</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/exception/408</location>
    </error-page>
    <error-page>
        <error-code>409</error-code>
        <location>/exception/409</location>
    </error-page>
    <error-page>
        <error-code>410</error-code>
        <location>/exception/410</location>
    </error-page>
    <error-page>
        <error-code>411</error-code>
        <location>/exception/411</location>
    </error-page>
    <error-page>
        <error-code>412</error-code>
        <location>/exception/412</location>
    </error-page>
    <error-page>
        <error-code>413</error-code>
        <location>/exception/413</location>
    </error-page>
    <error-page>
        <error-code>414</error-code>
        <location>/exception/414</location>
    </error-page>
    <error-page>
        <error-code>415</error-code>
        <location>/exception/415</location>
    </error-page>
    <error-page>
        <error-code>416</error-code>
        <location>/exception/416</location>
    </error-page>
    <error-page>
        <error-code>417</error-code>
        <location>/exception/417</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/exception/500</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>/exception/501</location>
    </error-page>
    <error-page>
        <error-code>502</error-code>
        <location>/exception/502</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/exception/503</location>
    </error-page>
    <error-page>
        <error-code>504</error-code>
        <location>/exception/504</location>
    </error-page>
    <error-page>
        <error-code>505</error-code>
        <location>/exception/505</location>
    </error-page>
</web-app>
