		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="fileUploadResource" class="org.springframework.core.io.FileSystemResource" >
        <constructor-arg type="java.lang.String" value="/tmp"/>
    </bean>
   <!-- one of the properties available; the maximum file size in bytes -->
    <!-- Configure the multipart resolver-->
    <bean id="multipartResolver" class="org.dataone.cn.rest.web.DataoneMultipartResolver">
        <property name="maxUploadSize" value="10000000000"/>
        <property name="maxInMemorySize" value="10000"/>
        <property name="uploadTempDir" ref="fileUploadResource"/>
    </bean>
    
   <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
      <property name="location">
         <value>file:/etc/dataone/node.properties</value>
      </property>
   </bean>
    <bean name="cnIdentity" class="org.dataone.service.cn.impl.v1.CNIdentityLDAPImpl">
        <property name="server" value="ldap://localhost:389"/>
        <property name="password" value="password"/>
        <qualifier value="cnIdentity" />
    </bean>
    <context:component-scan base-package="org.dataone.cn.rest.web.node"  />
    
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlDecode" value="false"/>
    </bean>
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlDecode" value="false"/>
        <property name="useDefaultSuffixPattern" value="false" />
    </bean>

